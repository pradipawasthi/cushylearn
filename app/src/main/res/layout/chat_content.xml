<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_height="match_parent">
<android.support.v4.widget.SwipeRefreshLayout
    android:layout_width="match_parent"
    android:id="@+id/swipe"
    android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:id="@+id/group_show_recyclerview"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/cloud_error"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/default_chat_img" />

    <TextView
        android:text="Sorry! You have no one to chat with, Add some friends by creating a Group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/default_chat_img"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:id="@+id/default_text"
        android:gravity="center"/>
</android.support.v4.widget.SwipeRefreshLayout>
</RelativeLayout>