<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/custom_round_blue"
    android:padding="10dp"
    android:layout_marginRight="90dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="20dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chat_message_sender_name"
            android:textSize="20sp"
            android:textColor="#afb42b"
            android:text="Name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chat_message_time"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:textColor="#ffffff"
            android:text="12:30pm"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:id="@+id/chat_message_text"
        android:textColor="@android:color/black"
        android:text="fbweoibfwoi biof wifbwjwibgqo oigwoqihef wioqhqofh oqifqhiofw fhoifh ifb bjji bqw b qowbuw ibg uiobgq \nj qwioghioh vo"/>
</LinearLayout>