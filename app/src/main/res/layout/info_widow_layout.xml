<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">


        <ImageView
            android:id="@+id/addIcon"
            android:layout_width="10dp"
            android:layout_weight="2.50"
            android:layout_height="121dp"
            android:src="@android:drawable/ic_menu_crop"
            android:background="@drawable/category_spinner_background"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nametv"
                android:layout_width="128dp"
                android:layout_height="100dp"
                android:textSize="20sp"
                android:paddingLeft="20sp"
                android:textColor="@color/colorPrimary"
                android:gravity="left|center_horizontal|center_vertical"
                android:text="My Cliic"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp">

        <TextView
            android:id="@+id/doctorNameLabel"

            android:layout_width="70dp"
            android:layout_height="20dp"
            android:textSize="12sp"
            android:paddingLeft="20sp"
            android:textColor="@android:color/black"
            android:gravity="left|center_horizontal|center_vertical"
            android:text="Category"/>
        <TextView
            android:id="@+id/categoryTv"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"

            android:layout_height="wrap_content"
            android:text="Alex "/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/timingLabel"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textSize="12sp"
            android:paddingLeft="20sp"
            android:textColor="@android:color/black"
            android:gravity="left|center_horizontal|center_vertical"
            android:text="Rating"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <android.support.v7.widget.AppCompatRatingBar
            android:id="@+id/ratingValues"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"

            android:layout_height="wrap_content"
            />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp">

        <TextView
            android:id="@+id/contactNoLabel"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:textSize="12sp"
            android:paddingLeft="20sp"
            android:textColor="@android:color/black"
            android:gravity="left|center_horizontal|center_vertical"
            android:text="Feedback:"/>
        <TextView
            android:id="@+id/feedbackValue"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:text="NA"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/satLabel"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:textSize="12sp"
            android:paddingLeft="20sp"
            android:textColor="@android:color/black"
            android:gravity="left|center_horizontal|center_vertical"
            android:text="Address"/>
        <TextView
            android:id="@+id/addressTv"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_height="100dp"
            android:textSize="12sp"
            android:inputType="textCapSentences|textMultiLine"

            android:text="NA"/>
    </LinearLayout>
    <!--
    <TextView
        android:id="@+id/button_offer_Type"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:background="@color/primary"
        android:gravity="center|center_horizontal|center_vertical"
        />


    <Button
        android:id="@+id/clinicType"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Offers"/>
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">
        <TextView
            android:id="@+id/offers_count"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:paddingLeft="20sp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_purple"
            android:gravity="left|center_horizontal|center_vertical"
            />
        <ListView
            android:id="@+id/list_offers"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
        </ListView>
    </LinearLayout>

</LinearLayout>